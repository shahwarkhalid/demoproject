<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">New Timelog</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="container">
        <%= form_with(model: @timelog, url: user_project_timelogs_url, remote: true) do |form| %>
          <div id="error_explanation">
          </div>

          <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :assign_employee %><div class="clearfix mb-3">
            <%= form.select :employee_id, ("<option value=''>Select Employee</option>" + options_from_collection_for_select(User.all.where(role:'user'), :id, :name, :selected => form.object.employee_id)).html_safe, {}, { id: 'choose-employee', :class => 'chosen-select form-control'} %>
          </div>

          <div class="form-group">
            <%= form.label :start_time, class: 'control-label' %>
            <div class="input-group date" id="datetimepicker3" data-target-input="nearest">
              <%= form.text_field(:start_time, class: "form-control datetimepicker-input", data: {target:"#datetimepicker3"}, required: true) %>
              <div class="input-group-append" data-target="#datetimepicker3" data-toggle="datetimepicker">
                <div class="input-group-text"><span class="fas fa-calendar-alt"></span></div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= form.label :end_time, class: 'control-label' %>
            <div class="input-group date" id="datetimepicker4" data-target-input="nearest">
              <%= form.text_field(:end_time, class: "form-control datetimepicker-input", data: {target:"#datetimepicker4"}, required: true) %>
              <div class="input-group-append" data-target="#datetimepicker4" data-toggle="datetimepicker">
                <div class="input-group-text"><span class="fas fa-calendar-alt"></span></div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= form.submit "Save timelog", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
