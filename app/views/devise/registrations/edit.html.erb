<div class="container">
  <h2 align="center">Edit Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="container">
      <div class="row">
        <% if !resource.image.blank? %>
          <img src="<%= resource.image.url %>" class="rounded-circle" alt="Cinque Terre" width="150" height="150">
        <% end %>
      </div><div class = "clearfix mb-3"></div>
      <div class="row form-group">
        <%= f.file_field :image %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name %><div class='clearfix'></div>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :age %><div class='clearfix'></div>
      <%= f.number_field :age, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :address %><div class='clearfix'></div>
      <%= f.text_field :address, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %><div class='clearfix'></div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><div class='clearfix'></div>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Update", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
<div class="container">
  <%= link_to "Cancel my account", admin_change_user_status_url(current_user), data: { confirm: "Are you sure?" }, class: 'btn btn-warning' %>
  <%= link_to "Back", root_url, class: 'btn btn-danger' %>
</div>
