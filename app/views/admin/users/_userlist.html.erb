<div class="container">
  <div>
    <div style="position:fixed;">
      <i class="fa fa-user-plus" aria-hidden="true"></i><%= link_to "New User", new_admin_user_url, class: "btn btn-info" %>
    </div>
  </div>
  <div style="margin-top:50px">
    <h1 align="center">Users</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Role</th>
          <th>Name</th>
          <th>Email</th>
          <th>Age</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.role %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.age %></td>
            <td><%= user.address %></td>
            <td><%= link_to '', edit_admin_user_url(user.id), class: 'btn btn-info fa fa-pencil-square-o' %>
              <% if user.status? %>
                <%= link_to 'Disable', admin_change_user_status_url(user.id), data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              <% else %>
                <%= link_to 'Enable', admin_change_user_status_url(user.id), data: { confirm: 'Are you sure?' }, class: 'btn btn-success' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>
