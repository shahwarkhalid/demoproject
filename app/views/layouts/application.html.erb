<!DOCTYPE html>
<html>
  <head>
    <title>Demo Project <%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-info">
      <%= link_to "Project Management App", root_url, class: "btn btn-info my-0 mr-md-auto font-weight-normal" %>

      <% if user_signed_in? %>
        <%if current_user.role == 'admin'%>
          <%= link_to 'Users', admin_users_url, class: 'btn btn-info'%>
          <%= link_to 'Clients', admin_clients_url, class: 'btn btn-info'%>
          <%= link_to 'Projects', admin_projects_url, class: 'btn btn-info'%>
        <% elsif current_user.role == 'manager' %>
          <%= link_to 'Clients', manager_clients_url, class: 'btn btn-info'%>
          <%= link_to 'Projects', manager_projects_url, class: 'btn btn-info'%>
        <% elsif current_user.role == 'user' %>
          <%= link_to 'Projects', user_projects_url, class: 'btn btn-info'%>
        <% end %>
        <div class="dropdown">
          <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown"><%= current_user.email %>
          <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><%= link_to fa_icon('pencil-square-o', text: "Edit Profile") , edit_user_registration_path, class: "p-2 text-dark" %></li>
            <li><%= link_to fa_icon('key', text: "Change Password") , edit_user_path(current_user), class: "p-2 text-dark" %></li>
            <li><%= link_to fa_icon('sign-out', text: "Logout"), destroy_user_session_path, method: :delete, class: "p-2 text-dark" %></li>
          </ul>
        </div>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "p-2 text-dark" %>
        <%= link_to "Sign up", new_user_registration_path, class: "p-2 text-dark" %>
      <% end %>
    </nav>
    <div style="float: left;">
      <% flash.each do |key, msg| %>
        <%= content_tag :div, msg, class: 'alert alert-danger' %>
      <% end %>
    </div>
    <div class="clearfix mb-4"></div>
      <%= yield %>
  </body>
</html>
