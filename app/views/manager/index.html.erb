<div class="container-fluid">
  <div class="row">
    <% @top_projects.each do |project| %>
      <div class="col-md-3">
        <div class = "shadow-lg p-3 mb-3 bg-white rounded shrink">
          <div class="card text-white bg-primary">
            <div class="card-body pb-0">
              <div style="float: right;"><%= link_to fa_icon('eye', text: ''), admin_project_url(project), class: 'btn btn-primary' %></div>
              <div>Title: <%= project.title %></div>
              <div>Description: <%= project.description %></div>
              <div>Budget: <%= project.budget %></div>0
            </div>
            <div class="chart-wrapper mt-3 mx-3 chart-wrap">
              <div class="chartjs-size-monitor size-monitor">
                <div class="chartjs-size-monitor-expand size-monitor"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
