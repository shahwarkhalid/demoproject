<div class="container">
  <%= form_with(url: comments_url, remote: true) do |form| %>

    <div class="form-group">
      <%= form.text_field :text, class: 'form-control' %>
    </div>

    <div hidden="true">
      <%= form.text_field :commentable_type, value: commentable_type, class: 'form-control' %>
    </div>

    <div hidden="true">
      <%= form.number_field :commentable_id, value: commentable_id, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit "Send", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
