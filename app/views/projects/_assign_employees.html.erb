<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">Add Employees</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="container">
        <%= form_with(url: form_url, remote: true) do |form| %>
          <div class="form-group">
            <%= form.label :assign_employees %><div class="clearfix mb-3">
            <%= form.select :employees, options_from_collection_for_select(User.where(role:'user'), :id, :name), {}, { id: 'choose-employee', multiple: 'multiple', class: 'chosen-select form-control'} %>
          </div>
          <div class="form-check-inline">
            <%= form.check_box :add_by_email, class: 'form-check-input' %>
            <%= form.label :add_by_email, class: 'form-check-label' %>
          </div>
          <div class="clearfix mb-4"></div>
          <div class="form-group">
            <%= form.label :domains %>
            <%= form.text_area :domains, class: 'form-control' %>
          </div>
          <div class="form-check-inline">
            <%= form.check_box :add_by_domain, class: 'form-check-input' %>
            <%= form.label :add_by_domain, class: 'form-check-label' %>
          </div>
          <div class="clearfix mb-3"></div>
          <div class="form-group">
            <%= form.submit "Save", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
