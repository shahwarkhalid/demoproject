<section class="search-sec">
    <div class="container">
        <%= form_with(url:project_search_url, remote: true) do |form| %>
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0 user-search-text">
                            <%= form.text_field :name, class: 'form-control search-slt' %>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0 user-search-btn" style="margin-left: 20px">
                          <%= form.submit 'Search', id: 'search', class: 'btn btn-success'%>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</section>
