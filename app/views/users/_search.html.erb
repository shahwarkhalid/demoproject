<section class="search-sec">
    <div class="container">
        <%= form_with(url:search_user_url, remote: true) do |form| %>
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0 user-search-text">
                            <%= form.text_field :name, class: 'form-control search-slt', value: 'Search User'%>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0 user-search-select" style="margin-left: 20px">
                           <%= form.select :role,("<option value='all'>Select Role</option>" + options_from_collection_for_select(Role.all, :name, :name)).html_safe, {}, {class: 'form-control search-slt'} %>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0 user-search-btn" style="margin-left: 20px">
                          <%= form.submit 'Search', id: 'search', class: 'btn btn-success'%>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</section>
