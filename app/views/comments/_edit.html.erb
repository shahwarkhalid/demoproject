<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">Editing Comment</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="container">
        <%= form_with(model: comment, url: comment_url, remote: true) do |form| %>
          <div class="form-group">
            <%= form.label :text %>
            <%= form.text_field :text, class: 'form-control' %>
          </div>
          <div hidden="true">
            <%= form.text_field :commentable_type, value: comment.commentable_type, class: 'form-control' %>
          </div>

          <div hidden="true">
            <%= form.number_field :commentable_id, value: comment.commentable_id, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.submit "Save Comment", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
